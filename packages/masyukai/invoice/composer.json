{
    "name": "masyukai/invoice",
    "description": "Laravel invoice generation package with PDF support using Spatie Laravel PDF",
    "keywords": ["laravel", "invoice", "pdf", "spatie", "tailwind"],
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Masyukai",
            "email": "hello@masyuk.ai"
        }
    ],
    "require": {
        "php": "^8.3",
        "ext-json": "*",
        "illuminate/contracts": "^12.0",
        "illuminate/database": "^12.0",
        "illuminate/support": "^12.0",
        "spatie/laravel-package-tools": "^1.92",
        "spatie/laravel-pdf": "^1.5"
    },
    "require-dev": {
        "driftingly/rector-laravel": "^2.0",
        "larastan/larastan": "^3.0",
        "laravel/framework": "^12.0",
        "laravel/pint": "^1.0",
        "mockery/mockery": "^1.6",
        "orchestra/testbench": "^10.0",
        "pestphp/pest": "^4.0",
        "pestphp/pest-plugin-laravel": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "MasyukAI\\Invoice\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MasyukAI\\Invoice\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint",
        "analyse": "vendor/bin/phpstan analyse --memory-limit=2G"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "MasyukAI\\Invoice\\InvoiceServiceProvider"
            ],
            "aliases": {
                "Invoice": "MasyukAI\\Invoice\\Facades\\Invoice"
            }
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
