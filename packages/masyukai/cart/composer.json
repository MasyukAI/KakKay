{
    "name": "masyukai/cart",
    "description": "A modern, feature-rich shopping cart package for Laravel 12 with Livewire integration",
    "license": "MIT",
    "keywords": [
        "laravel",
        "laravel12",
        "shopping-cart",
        "cart",
        "livewire",
        "e-commerce",
        "masyukai"
    ],
    "authors": [
        {
            "name": "MasyukAI",
            "email": "info@masyukai.com"
        }
    ],
    "require": {
        "php": "^8.4",
        "masyukai/cart-condition": "self.version"
    },
    "require-dev": {
        "livewire/livewire": "^3.0",
        "driftingly/rector-laravel": "^2.0",
        "larastan/larastan": "^3.0",
        "laravel/pint": "^1.18",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.6",
        "orchestra/testbench": "^10.0",
        "pestphp/pest": "^4.0",
        "pestphp/pest-plugin-browser": "^4.0",
        "pestphp/pest-plugin-laravel": "^4.0",
        "pestphp/pest-plugin-type-coverage": "^4.0",
        "phpunit/phpunit": "^12.3",
        "symplify/monorepo-builder": "^12.2"
    },
    "repositories": {
        "conditions": {
            "type": "path",
            "url": "packages/conditions"
        }
    },
    "autoload": {
        "psr-4": {
            "MasyukAI\\Cart\\": "packages/core/src",
            "MasyukAI\\Cart\\Conditions\\": "packages/conditions/src",
            "MasyukAI\\Cart\\Collections\\": "packages/conditions/src/Collections"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MasyukAI\\Cart\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test": [
            "vendor/bin/pest"
        ],
        "test-coverage": [
            "vendor/bin/pest --coverage"
        ],
        "format": [
            "vendor/bin/pint"
        ],
        "format-test": [
            "vendor/bin/pint --test"
        ]
    },
    "version": "1.0.0",
    "minimum-stability": "stable",
    "prefer-stable": true
}
