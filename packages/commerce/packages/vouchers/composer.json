{
    "name": "aiarmada/vouchers",
    "description": "Voucher and coupon system for Laravel applications",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "laravel",
        "laravel12",
        "vouchers",
        "coupons",
        "discounts",
        "cart",
        "e-commerce",
        "aiarmada"
    ],
    "authors": [
        {
            "name": "AIArmada",
            "email": "info@aiarmada.com"
        }
    ],
    "repositories": [
        {
            "type": "path",
            "url": "../cart"
        },
        {
            "type": "path",
            "url": "../../"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^12.0",
        "illuminate/database": "^12.0"
    },
    "suggest": {
        "aiarmada/cart": "Required for cart integration features (VoucherCondition, CartWithVouchers)"
    },
    "require-dev": {
        "orchestra/testbench": "^10.0",
        "pestphp/pest": "^4.0",
        "pestphp/pest-plugin-laravel": "^4.0",
        "laravel/pint": "^1.18",
        "phpunit/phpunit": "^12.3"
    },
    "autoload": {
        "psr-4": {
            "AIArmada\\Vouchers\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "AIArmada\\Vouchers\\VoucherServiceProvider"
            ],
            "aliases": {
                "Voucher": "AIArmada\\Vouchers\\Facades\\Voucher"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
