{
  "name": "aiarmada/docs",
  "description": "Doc generation package for Laravel with PDF support for invoices, receipts, shipping labels, and customizable templates",
  "type": "library",
  "license": "MIT",
  "homepage": "https://github.com/aiarmada/commerce",
  "support": {
    "issues": "https://github.com/aiarmada/commerce/issues",
    "source": "https://github.com/aiarmada/commerce"
  },
  "keywords": [
    "laravel",
    "invoice",
    "receipt",
    "doc",
    "pdf",
    "spatie",
    "aiarmada"
  ],
  "authors": [
    {
      "name": "AIArmada",
      "email": "info@aiarmada.com"
    }
  ],
  "require": {
    "php": "^8.4",
    "ext-json": "*",
    "aiarmada/commerce-support": "self.version",
    "illuminate/database": "^12.0",
    "spatie/laravel-pdf": "^1.5"
  },
  "require-dev": {
    "orchestra/testbench": "^10.0",
    "pestphp/pest": "^4.0",
    "pestphp/pest-plugin-laravel": "^4.0",
    "larastan/larastan": "^3.0",
    "laravel/pint": "^1.18"
  },
  "autoload": {
    "psr-4": {
      "AIArmada\\Docs\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "AIArmada\\Docs\\Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "AIArmada\\Docs\\DocsServiceProvider"
      ],
      "aliases": {
        "Doc": "AIArmada\\Docs\\Facades\\Doc"
      }
    }
  },
  "scripts": {
    "test": "vendor/bin/pest",
    "format": "vendor/bin/pint",
    "analyse": "vendor/bin/phpstan analyse"
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
