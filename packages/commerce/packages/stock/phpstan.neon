includes:
    - vendor/larastan/larastan/extension.neon

parameters:
    paths:
        - src
    
    level: 6
    
    reportUnmatchedIgnoredErrors: false

    parallel: { maximumNumberOfProcesses: 4 }
    
    # Ignore specific errors
    ignoreErrors:
        - identifier: 'missingType.generics'
        - identifier: 'trait.unused'

    # Exclude patterns
    excludePaths:
        - vendor
