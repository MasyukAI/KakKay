# Cart Package Environment Variables

# Basic Cart Configuration
CART_INSTANCE=default
CART_SESSION_KEY=cart

# Storage Configuration
CART_STORAGE=session
CART_DATABASE_CONNECTION=default
CART_DATABASE_TABLE=shopping_carts

# Cache Configuration
CART_CACHE_TTL=3600

# Security & Limits
CART_MAX_ITEMS=1000
CART_MAX_DATA_SIZE_BYTES=1048576
CART_MAX_ITEM_QUANTITY=10000
CART_MAX_STRING_LENGTH=255

# Metrics & Observability
CART_METRICS_ENABLED=true
CART_METRICS_CACHE_TTL=3600
CART_LOG_CHANNEL=cart
CART_SLOW_OPERATION_THRESHOLD=1.0
CART_TRACK_CONFLICTS=true

# Retry Configuration
CART_RETRY_ENABLED=true
CART_RETRY_MAX_ATTEMPTS=3
CART_RETRY_BASE_DELAY=100
CART_RETRY_MAX_DELAY=1000
CART_RETRY_EXPONENTIAL_BACKOFF=true
CART_RETRY_JITTER=true

# Money Configuration
CART_DEFAULT_CURRENCY=USD
CART_DEFAULT_PRECISION=2
CART_USE_MONEY_OBJECTS=true
CART_ROUNDING_MODE=round

# Cart Cleanup
CART_ABANDONED_AFTER_DAYS=7
CART_AUTO_CLEANUP=false
CART_CLEANUP_BATCH_SIZE=1000
