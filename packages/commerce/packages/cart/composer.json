{
  "name": "aiarmada/cart",
  "description": "Flexible shopping cart system for Laravel with support for conditions, discounts, multiple storage drivers, and cart instances",
  "type": "library",
  "license": "MIT",
  "homepage": "https://github.com/aiarmada/commerce",
  "support": {
    "issues": "https://github.com/aiarmada/commerce/issues",
    "source": "https://github.com/aiarmada/commerce"
  },
  "keywords": [
    "laravel",
    "cart",
    "shopping-cart",
    "e-commerce",
    "discounts",
    "conditions",
    "aiarmada"
  ],
  "authors": [
    {
      "name": "AIArmada",
      "email": "info@aiarmada.com"
    }
  ],
  "require": {
    "php": "^8.4",
    "aiarmada/commerce-support": "self.version",
    "akaunting/laravel-money": "^6.0",
    "illuminate/database": "^12.0"
  },
  "require-dev": {
    "orchestra/testbench": "^10.0",
    "pestphp/pest": "^4.0",
    "pestphp/pest-plugin-laravel": "^4.0",
    "larastan/larastan": "^3.0",
    "laravel/pint": "^1.18"
  },
  "autoload": {
    "psr-4": {
      "AIArmada\\Cart\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "AIArmada\\Cart\\Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "AIArmada\\Cart\\CartServiceProvider"
      ],
      "aliases": {
        "Cart": "AIArmada\\Cart\\Facades\\Cart"
      }
    }
  },
  "scripts": {
    "test": "vendor/bin/pest",
    "format": "vendor/bin/pint",
    "analyse": "vendor/bin/phpstan analyse"
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
